<Window x:Class="CompareContourScript.CompareContourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compare Contours" Height="800" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="PatientDetailsText" FontSize="14" Margin="0,0,0,10"/>
            <Label Content="Select Structure Set 1:"
                   Margin="10,10,10,10"
                   VerticalAlignment="Top" 
                   HorizontalAlignment="Left"/>
            <ComboBox x:Name="StructureSetComboBox1"
                      Width="300"
                      Margin="10"
                      VerticalAlignment="Top" />
            <Label Content="Select Structure Set 2:"
                   Margin="10,10,10,10"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"/>
            <ComboBox x:Name="StructureSetComboBox2"
                      Width="300"
                      Margin="10"
                      VerticalAlignment="Top" />
            <Button Content="Compare contours" Width="200" Margin="10" Click="CompareButton_Click" HorizontalAlignment="Center"/>
            <Button Content="Close" Width="100" Click="CloseButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
