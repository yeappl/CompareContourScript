<Window x:Class="CompareContourScript.CompareContourWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Compare Contours" Height="700" Width="450"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin=" 0,0,0,10">
            <StackPanel>
                <Label MaxWidth="450">
                    <TextBlock Text="This script allows users to select two different structure sets from the same planning CT and computes Dice Similarity Coefficient (DSC) for structures in both sets." TextWrapping="Wrap"/>
                </Label>
                <Label MaxWidth="450">
                    <TextBlock Text="Please report any bug to yeap.ping.lin@nccs.com.sg." TextWrapping="Wrap"/>
                </Label>
                <Label Content="Powered by NCCS DRO Physics. Updated Aug 2025."/>
                <Separator Margin="10"/>
                <TextBlock x:Name="PatientDetailsText" FontSize="14" Margin="0,0,0,10"/>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Content="Select Structure Set 1:"
                           Margin="10,5,10,5"
                           VerticalAlignment="Top" 
                           HorizontalAlignment="Left"/>
                    <ComboBox Grid.Column="1"
                           x:Name="StructureSetComboBox1"
                           Width="200"
                           Margin="5"
                           VerticalAlignment="Top" />
                </Grid>
                <Grid Margin="0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0"
                           Content="Select Structure Set 2:"
                           Margin="10,5,10,5"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"/>
                    <ComboBox Grid.Column="1"
                              x:Name="StructureSetComboBox2"
                              Width="200"
                              Margin="5"
                              VerticalAlignment="Top" />
                </Grid>
                <Button Content="Compare contours" Width="200" Margin="5" Click="CompareButton_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="1"
                      x:Name="ResultsGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Margin="0,10,0,0">
                <DataGrid.Columns>
                <DataGridTextColumn Header="Structure" Binding="{Binding StructureName}" Width="*"/>
                <DataGridTextColumn Header="DSC" Binding="{Binding DiceCoefficient, StringFormat=F3}" Width="150"/>
                </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Row="2" Content="Close" Width="100" Margin="5" Click="CloseButton_Click" HorizontalAlignment="Center"/>
    </Grid>
</Window>
